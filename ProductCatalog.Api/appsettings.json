{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=ProductCatalogDb;Username=postgres;Password=postgres"
  },
  "JwtOptions": {
    "Issuer": "ProductCatalogApi",
    "Audience": "ProductCatalogClient",
    "SecretKey": "a267632673b6dbbab3907a6787fc95aeaa913bf2ac9d3888af9fc5e3461995fb78ba3068f91322246b4159e3287a94b002ce183f8853bfa718d442e61b65de64",
    "ExpiresHours": 1
  },
  "CookieSettings": {
    "Name": "auth-cookies",
    "HttpOnly": true,
    "Secure": false,
    "SameSite": "None",
    "Path": "/",
    "ExpiresHours": 1
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ]
  }
}